sudo nano /etc/nginx/sites-available/autoconta.online

sudo mv /etc/nginx/sites-available/autoconta.online /etc/nginx/sites-available/autoconta.online



sudo nano /etc/nginx/sites-available/apicompany.autoconta.online



server {
    listen 80;
    server_name autoconta.online www.autoconta.online;

    location / {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}



pm2 stop 0


pm2 start src/app.js --name "ApiCompany"



